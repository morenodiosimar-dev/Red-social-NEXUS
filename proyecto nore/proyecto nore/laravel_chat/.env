# Entorno de Producción - Nexus Chat Laravel
APP_NAME="NexusChat"
APP_ENV=production
APP_KEY=base64:SU5TRVJDQUNJT05fQ0hBVF9LRVlfQVVUT01BVElDQUxMTU1FTlQ=
APP_DEBUG=false
APP_TIMEZONE="America/Mexico_City"
APP_URL=http://localhost

APP_LOCALE=es
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=es_ES

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Base de Datos - Compatible con sistema existente
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=nexus_db
DB_USERNAME=root
DB_PASSWORD=

# Sesiones - Compatibilidad con sistema PHP existente
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SAME_SITE=lax

# Broadcasting - Pusher (Compatible con hosting compartido)
BROADCAST_CONNECTION=pusher
BROADCAST_DRIVER=pusher

# Configuración Pusher - Obtener de https://dashboard.pusher.com/
PUSHER_APP_ID=123456
PUSHER_APP_KEY=mi_pusher_app_key
PUSHER_APP_SECRET=mi_pusher_app_secret
PUSHER_APP_CLUSTER=mt1
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Cache y Filesystem
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
CACHE_STORE=file

# Redis (Opcional - para producción alta)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Correo (Configuración básica)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="nexus@tudominio.com"
MAIL_FROM_NAME="${APP_NAME}"

# Configuración Vite/Laravel Mix
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Configuración adicional para compatibilidad
# Estas variables aseguran máxima compatibilidad con hosting compartido
# y con el sistema PHP existente

# Seguridad
TRUSTED_PROXIES=127.0.0.1
TRUSTED_HOSTS=localhost

# Límites de memoria (ajustar según hosting)
MEMORY_LIMIT=256M
MAX_EXECUTION_TIME=60

# Upload de archivos (para fotos de perfil)
UPLOAD_MAX_FILESIZE=10M
POST_MAX_SIZE=10M

# Configuración específica del chat
CHAT_MAX_MESSAGE_LENGTH=1000
CHAT_MAX_ROOM_USERS=2
CHAT_MESSAGE_RETENTION_DAYS=365
